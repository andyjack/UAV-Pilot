#!/usr/bin/perl
use v5.14;
use Term::ReadLine::Perl5;

my $PROMPT   = 'uav> ';
my $CONTINUE = 1;


sub run_cmd
{
    my ($cmd) = @_;
    my $return = 1;
    if( $cmd =~ /\A(?: exit | quit | q )\z/x ) {
        $return = 0;
    }
    else {
        # TODO
    }

    return $return;
}


{
    my $continue = 1;
    my $term = Term::ReadLine::Perl5->new( 'uav' );
    while( $continue && defined($_ = $term->readline( $PROMPT )) ) {
        $continue = run_cmd( $_ );
    }
}
